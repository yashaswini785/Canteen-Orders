<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/background_light"
    android:backgroundTint="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lakj.comspace.simpletextclient.Order_Type">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="@drawable/vegs"
        android:onClick="starter" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_centerVertical="true"
        android:background="@drawable/non_veg"
        android:onClick="nveg" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView10"
        android:layout_toEndOf="@+id/imageButton"
        android:background="@drawable/vegvectrr"
        android:onClick="veg" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="44dp"
        android:background="@drawable/dessert_l"
        android:onClick="dessert" />

    <TextView
        android:id="@+id/total_on_mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button6"
        android:layout_toEndOf="@+id/imageButton4"
        android:padding="10dp"
        android:text="Price"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:text="starters"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="?android:attr/colorControlActivated"
        android:onClick="fin_ord"
        android:text="Proceed"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/imageButton3"
        android:text="Desert"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton2"
        android:layout_marginStart="38dp"
        android:text="non-veg"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="27dp"

        android:layout_toEndOf="@+id/imageButton4"
        android:text="veg"
        android:textColor="@android:color/black"
        android:textSize="11sp" />


</RelativeLayout>
